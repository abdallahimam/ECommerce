@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";

	ViewBag.Title = "Create";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Dashboard</h1>
				</div><!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="#">Home</a></li>
						<li class="breadcrumb-item active">Dashboard v1</li>
					</ol>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->
	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<h2>Create Role</h2>
			<hr />
			<div class="row">
				<div class="col-md-4">
					@using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
					{
						@Html.AntiForgeryToken()
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						<div class="form-group row mb-2">
							@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
							<div class="col-sm-9">
								@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
								@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
							</div>
						</div>
						<div class="form-group">
							<input type="submit" value="Create" class="btn btn-primary" />
						</div>
					}
				</div>
			</div>
			<div>
				<a asp-action="Index">Back to List</a>
			</div>
		</div><!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
